<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:text="Nombre du chambre"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/nb_lits"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_simple_bed"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:id="@+id/iv_img_sushi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/single_bed" />

            <TextView
                android:id="@+id/qty_lit_simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="end"
                android:text="2"
                android:textColor="#67AE16"
                android:textSize="30dp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_double_lit"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="50">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bed_double" />

            <TextView
                android:id="@+id/qty_lit_double"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="end"
                android:text="2"
                android:textColor="#67AE16"
                android:textSize="30dp"

                android:textStyle="bold" />

        </FrameLayout>
        <!--   <ImageView
           android:layout_width="55dp"
           android:layout_height="match_parent"
           android:src="@drawable/single_bed" />

           <ImageView
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:src="@drawable/single_bed"
               />-->
    </LinearLayout>

    <Button
        android:id="@+id/btn_voir"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="8"
        android:text="Voir"
        android:textSize="16sp" />
</LinearLayout>